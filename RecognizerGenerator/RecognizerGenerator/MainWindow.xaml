        xmlns:local="clr-namespace:RecognizerGenerator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Label Content="Количество строк:"/>
            <TextBox Name="RowsTextBox" Margin="5"/>
            <Label Content="Количество колонок:"/>
            <TextBox Name="ColumnsTextBox" Margin="5"/>
            <Button Name="GenerateButton" Content="Сгенерировать" Margin="5"/>
        </StackPanel>
        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <!--<ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>-->
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="Таблица переходов автомата:"/>
            <DataGrid Grid.Row="1" ItemsSource="{Binding Items}"  AutoGenerateColumns="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Текущее состояие" IsReadOnly="True" Binding="{Binding Header}" />
                    <DataGridTextColumn Header="Символ 1" Binding="{Binding Column1}"/>
                    <DataGridTextColumn Header="Символ 2" Binding="{Binding Column2}"/>
                    <DataGridTextColumn Header="Символ 3" Binding="{Binding Column3}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
