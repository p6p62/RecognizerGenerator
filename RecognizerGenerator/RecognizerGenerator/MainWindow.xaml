<Window x:Class="RecognizerGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecognizerGenerator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Label Content="Количество строк:"/>
            <TextBox Name="RowsTextBox" Margin="5"/>
            <Label Content="Количество колонок:"/>
            <TextBox Name="ColumnsTextBox" Margin="5"/>
            <Button Name="GenerateButton" Content="Сгенерировать" Margin="5" Click="GenerateButton_Click"/>
        </StackPanel>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Vertical">
                <Label Content="Состояния:" />
                <DataGrid x:Name="StatesDataGrid" ItemsSource="{Binding States}" HeadersVisibility="None"></DataGrid>
            </StackPanel>
            <StackPanel Grid.Column="1" Orientation="Vertical">
                <Label Content="Входные символы:" />
                <DataGrid x:Name="InputSymbolsDataGrid" ItemsSource="{Binding InputSymbols}" HeadersVisibility="None"></DataGrid>
            </StackPanel>
            <Grid Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Content="Таблица переходов автомата:"/>
                <DataGrid Grid.Row="1" ItemsSource="{Binding .}">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Исходное состояние" IsReadOnly="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Source=States, Path=[%i%]}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                    <DataGrid.RowHeaderTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Source=States, Path=[%i%]}" />
                        </DataTemplate>
                    </DataGrid.RowHeaderTemplate>
                </DataGrid>
            </Grid>
        </Grid>
    </Grid>
</Window>
